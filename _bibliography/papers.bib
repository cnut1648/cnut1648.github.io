@inproceedings{zhao2023dream,
  title={DreamDistribution: Prompt Distribution Learning for Text-to-Image Diffusion Models},
  author={Zhao, Brian Nlong and Xiao*, Yuhang and Xu*, Jiashu and Jiang, Xinyang and Yang, Yifan and Li, Dongsheng and Itti, Laurent and Ge, Yunhao and Vineet, Vibhav},
