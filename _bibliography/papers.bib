@article{chan2021salkg,
  abbr={NeurIPS},
  bibtex_show={true},
  title={SalKG: Learning From Knowledge Graph Explanations for Commonsense Reasoning},
  author={Chan, Aaron and Xu, Jiashu and Long, Boyuan and Sanyal, Soumya and Gupta, Tanishq and Ren, Xiang},
